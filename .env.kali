# Infernox - Kali Linux Configuration
# Optimized for penetration testing and security research

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=infernox-kali-secret-key-change-this
JWT_SECRET_KEY=infernox-jwt-secret-key-change-this

# Database Configuration (SQLite for portability)
DATABASE_URL=sqlite:///infernox.db

# Security Settings (Kali optimized)
MAX_DAILY_SMS=500
MAX_HOURLY_SMS=100
REQUIRE_AUTHORIZATION=True
AUTHORIZED_USERS=root,kali,pentester
AUTHORIZED_DOMAINS=localhost,127.0.0.1,kali.local
LOG_RETENTION_DAYS=30

# Rate Limiting (Higher limits for testing)
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_PER_DAY=2000

# SMS Provider API Keys (Add your credentials)
# Vonage (Recommended for spoofing)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret

# ClickSend (Good alternative)
CLICKSEND_USERNAME=your_clicksend_username
CLICKSEND_API_KEY=your_clicksend_api_key

# Plivo (High volume)
PLIVO_AUTH_ID=your_plivo_auth_id
PLIVO_AUTH_TOKEN=your_plivo_auth_token

# MessageBird (EU focused)
MESSAGEBIRD_ACCESS_KEY=your_messagebird_access_key

# Custom SMS Gateway
CUSTOM_SMS_API_URL=https://your-custom-api.com/sms
CUSTOM_SMS_API_KEY=your_custom_api_key

# GSM Modem Configuration (Kali Linux)
GSM_MODEM_PORT=/dev/ttyUSB0
GSM_MODEM_BAUDRATE=115200
GSM_MODEM_TIMEOUT=30
GSM_MODEM_PIN=1234

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/infernox.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
AUDIT_LOG_PATH=logs/audit.log

# Server Configuration (Kali defaults)
HOST=127.0.0.1
PORT=5000

# Security Features (Kali optimized)
DEFAULT_ADMIN_PASSWORD=infernox123!
ENCRYPTION_KEY=generate-with-fernet-generate-key
ENFORCE_SESSION_IP=False
IP_WHITELIST=127.0.0.1,::1,192.168.0.0/16,10.0.0.0/8
BLOCK_PRIVATE_IPS=False

# Compliance Settings
AUDIT_DB_PATH=infernox_audit.db
RETENTION_DAYS=30
